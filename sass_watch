# sass_watch

# copy imports
echo "copy imports..."
cp bower_components/normalize.css/normalize.css _normalize.scss

# first recompile everything to catch diffs and generate up-to-date source maps
echo "Recompile all the the things..."
bundle exec sass --watch ./index.scss:./../build/index.css --style compact --sourcemap --update --force

# then start the normal watch task
bundle exec sass --watch ./index.scss:./../build/index.css --style compact --sourcemap